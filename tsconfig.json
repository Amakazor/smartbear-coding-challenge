{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@utility*": ["src/utility*"],
      "@components*": ["src/components*"],
      "@data*": ["src/data*"],
      "@context*": ["src/context*"],
      "@hooks*": ["src/hooks*"],
      "@routes*": ["src/routes*"],

      "@utility": ["src/utility"],
      "@components": ["src/components"],
      "@data": ["src/data"],
      "@context": ["src/context"],
      "@hooks": ["src/hooks"],
      "@routes": ["src/routes"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
